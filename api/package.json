{
  "name": "api",
  "version": "1.0.0",
  "description": "server side of the application(express)",
  "main": "index",
  "scripts": {
    "start": "node --max-semi-space-size=128 index.js",
    "client": "(cd ../client && npm run start)",
    "server": "nodemon index.js",
    "clean": "rimraf ../client/build",
    "dev": "SET NODE_ENV=development && concurrently \"npm run server\" \"npm run client\"",
    "build": "SET NODE_ENV=production && cd ../client && npm run build && cd ../api",
    "prod": "npm run start",
    "init:packages": "npm install && cd ../client && npm install && cd ../api",
    "tsc": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Juozas Rimantas",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "2.8.6",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.1",
    "@types/helmet": "0.0.44",
    "body-parser": "1.19.0",
    "ccxt": "1.18.1078",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "helmet": "3.21.1",
    "request": "2.88.0",
    "typescript": "3.6.4"
  },
  "devDependencies": {
    "concurrently": "4.1.1",
    "nodemon": "1.19.1",
    "rimraf": "3.0.0",
    "tslint": "5.20.0"
  }
}
