{
  "name": "api",
  "version": "1.7.2",
  "description": "server side of the application(express)",
  "main": "src/app",
  "scripts": {
    "tsc": "tsc",
    "start": "NODE_ENV=production && tsc && node ./dist/app.js",
    "client": "(cd ../client && npm run start)",
    "server": "nodemon src/app.ts",
    "clean": "rimraf ./dist ../client/build ",
    "eslint:ts": "eslint . -c .eslintrc --ignore-path .eslintignore --ext .ts --max-warnings 20 -f stylish",
    "dev": "NODE_ENV=development && concurrently \"npm run server\" \"npm run client\"",
    "build": "NODE_ENV=production && cd ../client && npm run build && cd ../api",
    "prod": "NODE_ENV=production && npm run start",
    "init:packages": "npm install && cd ../client && npm install && cd ../api",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Juozas Rimantas",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "helmet": "3.21.1",
    "morgan": "^1.10.0",
    "request": "2.88.0",
    "request-promise": "^4.2.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "2.8.6",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.1",
    "@types/helmet": "0.0.44",
    "@types/morgan": "^1.9.0",
    "@types/node": "12.11.1",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.46",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "nodemon": "1.19.1",
    "prettier": "^2.0.5",
    "rimraf": "3.0.0",
    "ts-node": "8.4.1",
    "typescript": "3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . -c .eslintrc --ignore-path .eslintignore --ext .ts --max-warnings 20 -f stylish"
    ],
    "*.{js,md,ts,tsx}": [
      "prettier --write --single-quote --print-width=120 --arrow-parens=always --trailing-comma=all",
      "git add"
    ]
  }
}
